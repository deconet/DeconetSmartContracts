    "url": "https://github.com/wanderer/rlp.git"
  },
  "keywords": [
    "rlp",
    "ethereum"
  ],
  "author": {
    "name": "martin becze",
    "email": "mjbecze@gmail.com"
  },
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/wanderer/rlp/issues"
  },
  "devDependencies": {
    "ethereumjs-testing": "git+https://github.com/wanderer/ethereumjs-testing.git",
    "mocha": "~1.17.1",
    "standard": "^5.3.1"
  },
  "bin": {
    "rlp": "./bin/rlp"
  },
  "testling": {
